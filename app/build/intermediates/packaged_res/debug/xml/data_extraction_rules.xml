<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- Exclude sensitive data from cloud backup -->
        <exclude domain="sharedpref" path="sensitive_data.xml"/>
        <exclude domain="database" path="monitoring.db"/>
        <exclude domain="file" path="private/"/>
    </cloud-backup>
    <device-transfer>
        <!-- Allow device transfer for non-sensitive data -->
        <include domain="sharedpref" path="app_settings.xml"/>
        <exclude domain="sharedpref" path="sensitive_data.xml"/>
        <exclude domain="database" path="monitoring.db"/>
        <exclude domain="file" path="private/"/>
    </device-transfer>
</data-extraction-rules>