<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="32dp"
    android:background="@color/colorWhite">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸ“ Location Tracking"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <TextView
        android:id="@+id/statusTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Location tracking is active\nMonitoring device location..."
        android:textSize="16sp"
        android:textColor="@color/colorTextSecondary"
        android:gravity="center"
        android:lineSpacingExtra="8dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorTextSecondary"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp"
        android:alpha="0.3" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This feature monitors the device's location in real-time and displays it on a map interface."
        android:textSize="14sp"
        android:textColor="@color/colorTextSecondary"
        android:gravity="center"
        android:lineSpacingExtra="4dp" />

</LinearLayout>