<?xml version="1.0" encoding="utf-8"?>
<LinearLayout style="@style/Match.Vertical"
    android:gravity="center"
    android:background="@color/colorShaft"
    android:padding="36dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="84dp"
        android:layout_height="84dp"
        android:src="@mipmap/ic_launcher"
        android:contentDescription="@string/app_name" />

    <TextView
        android:gravity="center"
        android:text="@string/put_your_access_code"
        android:textColor="@color/colorWhite"
        android:id="@+id/txt_msg_lock"
        style="@style/Wrap.Medium"/>

    <LinearLayout
        android:id="@+id/indicator_dots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">
        
        <View
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@drawable/dot_filled"
            android:layout_margin="4dp"/>
        <View
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@drawable/dot_filled"
            android:layout_margin="4dp"/>
        <View
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@drawable/dot_filled"
            android:layout_margin="4dp"/>
        <View
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@drawable/dot_filled"
            android:layout_margin="4dp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorHintDark"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/pin_lock_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:inputType="numberPassword"
        android:maxLength="4"
        android:hint="Enter 4-digit code"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorWhite"
        android:background="@null"
        android:textSize="35sp"
        android:gravity="center"/>

</LinearLayout>